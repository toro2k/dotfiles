# font pango:Inconsolata 14
font pango:<%= i3_font %>

bar {
    status_command i3blocks

    # i3bloks doesn't work on FreeBSD
    # status_command i3status
    # separator_symbol " | "
}

focus_follows_mouse no


bindsym mod4+shift+c reload
bindsym mod4+shift+r restart
bindsym mod4+shift+e exit

bindsym mod4+shift+q kill

# bindsym mod4+space exec dmenu_run -p '%' -fn 'xft:Inconsolata:size=12'
bindsym mod4+space exec dmenu_run -p '%' -fn '<%= dmenu_font %>'
bindsym mod4+Return exec urxvt

bindsym mod4+h focus left
bindsym mod4+j focus down
bindsym mod4+k focus up
bindsym mod4+l focus right

bindsym mod4+shift+h move left
bindsym mod4+shift+j move down
bindsym mod4+shift+k move up
bindsym mod4+shift+l move right

bindsym mod4+mod1+v split v
bindsym mod4+mod1+h split h

bindsym mod4+f fullscreen

bindsym mod4+s layout stacking
bindsym mod4+w layout tabbed
bindsym mod4+e layout default

bindsym mod4+Shift+space floating toggle

bindsym mod4+1 workspace 1
bindsym mod4+2 workspace 2
bindsym mod4+3 workspace 3
bindsym mod4+4 workspace 4

bindsym mod4+Shift+exclam move container to workspace 1
bindsym mod4+Shift+at move container to workspace 2
bindsym mod4+Shift+numbersign move container to workspace 3
bindsym mod4+Shift+dollar move container to workspace 4

bindsym mod4+Control+h move workspace to output left
bindsym mod4+Control+l move workspace to output right
bindsym mod4+Control+k move workspace to output up
bindsym mod4+Control+j move workspace to output down


bindsym XF86AudioRaiseVolume exec i3blocks-volume up
bindsym XF86AudioLowerVolume exec i3blocks-volume down
bindsym XF86AudioMute exec i3blocks-volume toggle

bindsym mod4+z exec i3blocks-xkb next

bindsym Scroll_Lock exec i3lock -c2e3436
