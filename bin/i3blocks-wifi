#!/usr/bin/env python3

import subprocess
import re
import os

def read_ssid(iface):
    proc = subprocess.Popen(['iwgetid', '--raw'], stdout=subprocess.PIPE)
    stdout, stderr = proc.communicate()
    return stdout.decode().strip()

def read_quality(iface):
    proc = subprocess.Popen(['iwconfig', iface], stdout=subprocess.PIPE)
    for line in proc.stdout:
        if not b'Quality' in line:
            continue

        match = re.search(b'([0-9]+)/([0-9]+)', line)
        quality = int(match.group(1)) / int(match.group(2))
        return quality

try:
    iface = os.environ['BLOCK_INSTANCE']
except:
    exit(1)

ssid = read_ssid(iface)
quality = read_quality(iface)

print('{}'.format(ssid))
print(ssid)

if quality >= 0.8:
    print()
elif quality >= 0.6:
    print('#ffff00')
else:
    print('#ff0000')

exit(0)
