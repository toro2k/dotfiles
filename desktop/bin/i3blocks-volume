#!/usr/bin/env python

import re
import sys
import subprocess

def read_volume():
    proc = subprocess.Popen(['amixer', '-M', 'sget', 'Master'],
            stdout=subprocess.PIPE, stderr=subprocess.PIPE)

    for line in proc.stdout:
        if b'Mono:' not in line:
            continue

        if re.search(b'\[off\]', line):
            return None
        else:
            match = re.search(b'\[([0-9]+)%\]', line)
            return int(match.group(1))

def set_master(*args):
    command = ['amixer', '--quiet', '--mapped-volume',
            'sset', 'Master']
    subprocess.call(command + list(args))



if len(sys.argv) == 1:
    volume = read_volume()
    if volume:
        print('vol {:}%'.format(volume))
        print('{:}%'.format(volume))
        if volume > 66:
            print('#ff0000')
        elif volume > 33:
            print('#ffff00')
        else:
            print('#00ff00')

    else:
        exit(0)

else:
    if sys.argv[1] == 'up':
        set_master('3%+', 'unmute')

    elif sys.argv[1] == 'down':
        set_master('3%-', 'unmute')

    elif sys.argv[1] == 'toggle':
        set_master('toggle')

    else:
        pass

    subprocess.call(['pkill', '-RTMIN+1', 'i3blocks'])
